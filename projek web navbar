    <script>
         
         document.addEventListener("change", function (event) {
   
    if (event.target.classList.contains("menuSelect")) {
        let orderItem = event.target.closest(".order-item")
        let pizzaSize = orderItem.querySelector(".pizzaSize")

        if (event.target.value === "Pizza") {
            pizzaSize.style.display = "block"
        } else {
            pizzaSize.style.display = "none"
        }
    }
});
    
