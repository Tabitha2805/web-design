            <script>
            document.getElementById("paymentMethod").addEventListener("change", function() {
                let method = this.value;
                let ewalletOptions = document.getElementById("ewalletOptions");
                let paymentDetails = document.getElementById("payment-details");
                let cardDetails = document.getElementById("cardDetails");
            
                ewalletOptions.style.display = "none";
                paymentDetails.style.display = "none";
                cardDetails.style.display = "none";
            
                if (method === "ewallet") {
                    ewalletOptions.style.display = "block"
                } else if (method === "card") {
                    cardDetails.style.display = "block"
                }
            });
            
            document.querySelectorAll('input[name="payment"]').forEach((input) => {
                input.addEventListener('change', function() {
                    let qrImage = document.getElementById("qr-code");
                    let paymentDetails = document.getElementById("payment-details");
            
                    if (this.value === "dana") {
                        qrImage.src = "img/qr.jpg"
                    } else if (this.value === "gopay") {
                        qrImage.src = "img/qr.jpg"
                    } else if (this.value === "ovo") {
                        qrImage.src = "img/qr.jpg"
                    }
            
                    paymentDetails.style.display = "block"
                });
            });
            </script>
